<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c2f45e"
    tools:context="gasolinaoualcool.cursodeandroid.com.gasolinaoualcool.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_caixa_de_texto"
        app:layout_constraintDimensionRatio="h,1:1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="81dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:background="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/preço_alcool_id"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:text="Preço do Alcool"
            android:textAlignment="center"
            android:textColor="#10420f"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentEnd="true"
            android:text="Preço da Gasolina"
            android:textColor="#10420f"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/preço_alcool_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Preço_gasolina_id"
            android:layout_alignBottom="@+id/Preço_gasolina_id"
            android:layout_alignEnd="@+id/textView"
            android:background="@android:color/white"
            android:ems="10"
            android:inputType="numberDecimal"
            android:padding="@dimen/padding_caixa_de_texto"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="209dp" />

        <EditText
            android:id="@+id/Preço_gasolina_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:ems="10"
            android:inputType="numberDecimal"
            android:padding="@dimen/padding_caixa_de_texto" />

        <Button
            android:id="@+id/botao_verificar_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Preço_gasolina_id"
            android:layout_marginTop="27dp"
            android:text="@string/texto_btn_verificar" />

        <TextView
            android:id="@+id/texto_resultado_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/botao_verificar_id"
            android:layout_below="@+id/botao_verificar_id"
            android:layout_marginTop="42dp"
            android:textAlignment="center" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
